            <policy-permission>
               <role-name>Admin</role-name>
               <action-name>view</action-name>
            </policy-permission>
            <policy-permission>
               <role-name>User</role-name>
               <action-name>view</action-name>
            </policy-permission>
         </security-constraint>
      </instance>
   </deployment>
